<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="359dp"
        android:layout_height="106dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bigboysogo" />

    <ImageButton
        android:id="@+id/fidgetSpinnerButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="68dp"
        android:maxWidth="10dp"
        android:maxHeight="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/quizButton"
        android:onClick="goFidgetSpinner"
        app:srcCompat="@drawable/fidgetspinner" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:text="The App Not Meant for Your Grandma"
        android:textColor="@color/colorSecondary"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageButton
        android:id="@+id/quizButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:maxWidth="10dp"
        android:maxHeight="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/fidgetSpinnerButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/quiz" />
</androidx.constraintlayout.widget.ConstraintLayout>